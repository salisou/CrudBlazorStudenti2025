
@page "/prodotti"
@using BlazorApp2.Data
@using BlazorApp2.Models
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.EntityFrameworkCore
@inject AppDbContext Context

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Lista Prodotti</h2>

    <!-- Barra di ricerca -->
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Cerca prodotto..." @bind="searchTerm" @bind:event="oninput" />
        <button class="btn btn-outline-secondary" @onclick="ClearSearch">Reset</button>
    </div>

    <!-- Tabella prodotti -->
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Prezzo (€)</th>
                <th class="text-center">Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in PagedProducts)
            {
                <tr @key="product.Id">
                    <td>@product.Nome</td>
                    <td>@product.Prezzo.ToString("C")</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-warning me-2" @onclick="() => OpenEditModal(product)">
                            <i class="bi bi-pencil-square"></i> Modifica
                        </button>
                        <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(product.Id)">
                            <i class="bi bi-trash"></i> Elimina
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Paginazione -->
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= TotalPages; i++)
            {
                <li class="page-item @(currentPage == i ? "active" : "")">
                    <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                </li>
            }
        </ul>
    </nav>

    <!-- Modal per aggiunta/modifica -->
    <div class="modal fade @(showModal ? "show d-block" : "")" tabindex="-1" style="background-color: rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">@modalTitle</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="currentProduct" OnValidSubmit="SaveProduct">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label for="nome" class="form-label">Nome</label>
                            <InputText id="nome" class="form-control" @bind-Value="currentProduct.Nome" />
                        </div>
                        <div class="mb-3">
                            <label for="prezzo" class="form-label">Prezzo (€)</label>
                            <InputNumber id="prezzo" class="form-control" @bind-Value="currentProduct.Prezzo" />
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success me-2">
                                @(isEditing ? "Aggiorna" : "Aggiungi")
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Annulla</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Prodotto> products = new();
    private Prodotto currentProduct = new();
    private bool isEditing = false;
    private bool showModal = false;
    private string modalTitle = "Aggiungi Prodotto";

    private string searchTerm = "";
    private int currentPage = 1;
    private int pageSize = 5;

    private IEnumerable<Prodotto> FilteredProducts => string.IsNullOrWhiteSpace(searchTerm)
        ? products
        : products.Where(p => p.Nome.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

    private IEnumerable<Prodotto> PagedProducts => FilteredProducts.Skip((currentPage - 1) * pageSize).Take(pageSize);
    private int TotalPages => (int)Math.Ceiling((double)FilteredProducts.Count() / pageSize);

    protected override async Task OnInitializedAsync()
    {
        products = await Context.Prodotti.ToListAsync();
    }

    private void ChangePage(int page) => currentPage = page;
    private void ClearSearch() => searchTerm = "";

    private void OpenEditModal(Prodotto product)
    {
        currentProduct = new Prodotto
        {
            Id = product.Id,
            Nome = product.Nome,
            Prezzo = product.Prezzo
        };
        isEditing = true;
        modalTitle = "Modifica Prodotto";
        showModal = true;
    }

    private void CloseModal()
    {
        currentProduct = new Prodotto();
        isEditing = false;
        showModal = false;
    }

    private async Task SaveProduct()
    {
        if (currentProduct.Id == 0)
        {
            Context.Prodotti.Add(currentProduct);
        }
        else
        {
            Context.Prodotti.Update(currentProduct);
        }

        await Context.SaveChangesAsync();
        products = await Context.Prodotti.ToListAsync();
        CloseModal();
    }

    @inject IJSRuntime JSRuntime
    private async Task ConfirmDelete(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Sei sicuro di voler eliminare questo prodotto?"))
        {
            var product = await Context.Prodotti.FindAsync(id);
            if (product != null)
            {
                Context.Prodotti.Remove(product);
                await Context.SaveChangesAsync();
                products = await Context.Prodotti.ToListAsync();
            }
        }
    }
}
